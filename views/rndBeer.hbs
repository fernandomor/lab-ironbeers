
<div class="container mt-5 justify-content-center d-flex">
<div class="card mb-3 p-5" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img style="height:280px ;width:80px" class="cervezasC2" src="{{this.image_url}}" alt="">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">{{this.description}}</p>
        <ul>
            {{#each this.food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p class="card-text"><small class="text-muted">{{brewers_tips}}</small></p>
      </div>
    </div>
  </div>
</div>
</div>


